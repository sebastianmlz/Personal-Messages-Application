<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My App</title>
    <link rel="stylesheet" href="styles/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <div class="container flex-grow-1">
        <div class="row border-bottom mb-5">
            <h1>Bienvenido <%= nameUser %></h1>
            <p>Ingresar un nuevo tema <a href="/newMessage" type="button" class="btn btn-primary">New</a></p>
            
        </div>
        <h2>Mensajes Registrados</h2>
        <div class="border-bottom mb-5"></div>
        <div class="row messageContainer">
            <% if (messages) { %>
                <% messages.forEach(message => { %>
                    <div class="card text-bg-light mx-4 my-3 p-0" style="max-width: 18rem;">
                        <div class="card-header d-flex header">
                            <p class="m-0 p-0">Mensaje #<%= message.index + 1 %></p>
                            <div>
                                <a href="/editMessage?index=<%= message.index %>" type="button" class="btn btn-warning">Edit</a>
                                <form action="/deleteMessage" method="POST" style="display:inline;">
                                    <input type="hidden" name="index" value="<%= message.index %>">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= message.title %></h5>
                            <p class="card-text"><%= message.text %></p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div> 
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

</body>
</html>
